<%
  labels = %w(
    website
    wikipedia
    twitter
    facebook
    youtube
    instagram
    tumbler
    pinterest
    bandcamp
    spotify
    soundcloud
    myspace
    purevolume
    amazon
  )
  types = %w(
    stream
    parchase
    feed
  )
%>
<div>
  <label>
    <span><a class="anchor" href="<%= link.url %>" target="_blank">link</a>: </span>
    <select name="links[label][]">
      <option value="">----</option>
      <% labels.each do |label| %>
        <option value="<%= label %>" <%= "selected" if link.label == label %>><%= label %></option>
      <% end %>
    </select>
    <select name="links[type][]">
      <option value="">----</option>
      <% types.each do |type| %>
        <option value="<%= type %>" <%= "selected" if link.type == type %>><%= type %></option>
      <% end %>
    </select>
  </label>
  <label>
    <span> </span>
    <input name="links[url][]"   type="text" value="<%= link.url %>" onchange="onChangeText(this, 'link')" /><br/>
  </label>
  <label>
    <span> </span>
    <input name="links[title][]" type="text" value="<%= link.title %>" /><br/>
  </label>
</div>
