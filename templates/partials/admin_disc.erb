<% if admin? %>
<div class="block admin">
  <label>
    <span>code: </span>
    <input form="form1" id="code" name="code" type="text" value="<%= @item.code %>" />
  </label>
  <label>
    <span>name: </span>
    <input form="form1" name="name" type="text" onchange="onChangeName(this)" value="<%= @item.name %>" />
  </label>
  <label>
    <span>bands: </span>
    <input form="form1" name="bands" type="text" value="<%= @item.bands %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectValue(this, 'bands')">
      <option value="">----</option>
      <% @bands.each do |band| %>
        <option value="<%= band.code %>"><%= band.name %></option>
      <% end %>
    </select>
  </label>
  <label>
    <span>labels: </span>
    <input form="form1" name="labels" type="text" value="<%= @item.labels %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectValue(this, 'labels')">
      <option value="">----</option>
      <% @labels.each do |label| %>
        <option value="<%= label.code %>"><%= label.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    <span>disc_type: </span>
    <input form="form1" name="disc_type" type="text" value="<%= @item.disc_type %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectValue(this, 'disc_type')">
      <option value="">----</option>
      <% disc_types.keys.each do |key| %>
        <option value="<%= key %>"><%= disc_types[key] %></option>
      <% end %>
    </select>
  </label>
  <label>
    <span>date: </span>
    <input form="form1" class="date-picker" name="date" type="text" value="<%= @item.date %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectDate(this, 'date')">
      <option value="">----</option>
      <% date_labels.keys.each do |key| %>
        <option value="<%= key %>"><%= key %></option>
      <% end %>
    </select>
  </label>

  <label>
    <span>image: </span>
    <input form="form1" name="image" type="text" value="<%= @item.image %>" />
  </label>
  <label>
    <span>video: </span>
    <input form="form1" name="video" type="text" value="<%= @item.video %>" />
  </label>

  <label>
    <span>genres: </span>
    <input form="form1" name="genres" type="text" value="<%= @item.genres %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectValue(this, 'genres')">
      <option value="">----</option>
      <% genre_labels.keys.each do |key| %>
        <option value="<%= key %>"><%= genre_labels[key] %></option>
      <% end %>
    </select>
  </label>

  <% disc_sites.each do |site| %>
    <label>
      <span>
        <a href="<%= search_link(:google, "#{@item.name} #{site_labels[site]}")%>" target="_blank"><%= site %></a>:
        <button onclick="onClickSite(this)">T</button>
      </span>
      <input form="form1" name="<%= site %>" type="text" value="<%= @item.send(site) %>" />
    </label>
  <% end %>

  <% (@item.all_links + [nil]).each do |site| %>
    <label>
      <span>links:
        <button onclick="onClickSite(this)">T</button>
      </span>
      <input form="form1" name="links[]" type="text" value="<%= site %>" />
    </label>
  <% end %>

  <label>
    <span>discs: </span>
    <input form="form1" name="discs" type="text" value="<%= @item.discs %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectValue(this, 'discs')">
      <option value="">----</option>
      <% @discs.each do |disc| %>
        <option value="<%= disc.code %>"><%= disc.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    <span>guests: </span>
    <input form="form1" name="guests" type="text" value="<%= @item.guests %>" />
  </label>
  <label>
    <span> </span>
    <select onchange="onSelectValue(this, 'guests')">
      <option value="">----</option>
      <% @bands.each do |band| %>
        <option value="<%= band.code %>"><%= band.name %></option>
      <% end %>
    </select>
  </label>

  <label>
    <span>body: </span>
    <textarea form="form1" name="body"><%= @item.body %></textarea>
  </label>

  <form id="form1" name="form1" method="post">
    <a href="<%= link("tools") %>" target="_blank">Thumbnail</a>
    <a href="<%= link("export") %>" target="_blank">Export</a>
    <button onclick="update()">Update</button>
    <button onclick="del()">Delete</button>
  </form>
</div>
<script>
function update() {
  document.form1.action = "<%= link("#{@item.class.to_s.downcase}/") %>" + document.querySelector("#code").value
  document.form1.submit()
}

function del() {
  if (window.confirm("delete?")) {
    document.form1.action = "<%= link("#{@item.class.to_s.downcase}/delete") %>"
    document.form1.submit()
	}
}

function onChangeName(e) {
  const code = e.value.toLowerCase().replace(/\s/g, "_")
  document.querySelector("#code").value = code
}

function onSelectValue(e, name) {
  if (document.querySelector("[name=" + name + "]").value) {
    document.querySelector("[name=" + name + "]").value += ("," + e.value)
  } else {
    document.querySelector("[name=" + name + "]").value = e.value
  }
}

function onSelectDate(e, name) {
  const date = document.querySelector("[name=" + name + "]").value
  if (date) {
    const y = date.split("/")[0]
    const m = date.split("/")[1]
    if (e.value.startsWith("month")) {
      document.querySelector("[name=" + name + "]").value = y + "/" + m + " " + e.value
    } else {
      document.querySelector("[name=" + name + "]").value = y + " " + e.value
    }
  }
}

function onClickSite(e) {
  const input = e.parentElement.parentElement.lastElementChild
  if (input.value) {
    console.log(input.value)
    const words = input.value.split(" ")
    const url = encodeURIComponent(words.shift())
    const title = words.join(" ")
    if (!title) {
      getRequest("<%= link("api/site_title?url=") %>" + url, (result)=>{
        input.value += " " + result
      })
    }
  }
}


