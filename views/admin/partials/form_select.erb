<label>
  <span><%= key %>: </span>
  <input name="entry[<%= key %>]"
         type="text"
         onchange="onChangeText(this, '<%= key %>')"
         value="<%= item.send(key.to_sym) %>"
         />
</label>
<label>
  <span> </span>
  <select onchange="onSelectValue(this, '<%= key %>')">
    <option value="">----</option>
    <% select_items.each do |select_item| %>
      <option value="<%= select_item[:value] %>"><%= select_item[:display] %></option>
    <% end %>
  </select>
</label>
