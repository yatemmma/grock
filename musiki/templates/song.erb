<% song = obj %>
<html>
<head>
  <%= head(song.name + " | G-ROCK", 1) %>
</head>
<body>
  <%= header(1) %>
  <div class="contents-wrapper">

    <div id="player" data-key="<%= song.youtube_key%>"></div>
    <h2><%= song.title %></h2>

    <div class="contents">
      <%= body(song.body, 1) %>

      <%= sns("song/#{song.code}.html", song.title, 1) %>

      <%= band_link(song.band?, "band/#{song.band?.code}", 1) %>

      <% song.guests?.each do |items|%>
        <% member, org = items %>
        <%= guest_link(org["label"], member, "member/#{member.code}", 1) %>
      <% end %>

      <%= link_block("Apple Music", song.apple) unless song.apple.nil? %>
      <%= link_block("Play Music", song.play) unless song.play.nil? %>
      <% (song.links || []).map do |link| %>
        <%= link_block("Link", link) %>
      <% end %>
    </div>

    <div class="sub-contents">
      xxxx
    </div>

  </div>
  <%= footer(1) %>
</body>
</html>
