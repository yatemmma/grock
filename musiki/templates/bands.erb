<% bands = obj %>
<html>
<head>
  <%= head("Bands | G-ROCK") %>
</head>
<body>
  <%= header %>
  <div class="contents">
    <table class="items">
      <thead>
        <tr>
          <th>
            <input type="text" class="search-name" placeholder="Band Name"></input>
            <a href="#"><i class="fas fa-sort"></i></a>
          </th>
          <th>
            <input type="text" class="search-country" placeholder="Country"></input>
            <a href="#"><i class="fas fa-sort"></i></a>
          </th>
          <th>
            <input type="text" class="search-genre" placeholder="Genre"></input>
            <a href="#"><i class="fas fa-sort"></i></a>
          </th>
          <th>
            <input type="text" class="search-active" placeholder="Active"></input>
            <a href="#"><i class="fas fa-sort"></i></a>
          </th>
          <th>
            <input type="text" class="search-note" placeholder="Note"></input>
            <a href="#"><i class="fas fa-sort"></i></a>
          </th>
        </tr>
      </thead>
      <tbody>
        <% bands.each do |code, band| %>
        <tr>
          <td><a href="band/<%= band.code %>.html"><%= band.name %></a></td>
          <td>
            <a href="band/<%= band.code %>.html">
              <span class="flag"><%= band.country_emoji %></span>
              <span><%= band.country_name %></span>
            </a>
          </td>
          <td><a href="band/<%= band.code %>.html"><%= band.main_genre %></a></td>
          <td><%= band.active_short %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= footer %>
</body>
</html>
