<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <style>
    body {
      margin: 0px;
    }
    header {
      background-color: darkgoldenrod;
      padding: 4px;
      position: fixed;
      width: 100%;
    }
    header a,
    header a:visited {
      color: white;
    }
    main {
      padding-top: 40px;
    }
    label {
      display: block;
    }
    label span {
      display: inline-block;
      width: 160px;
      vertical-align: top;
    }
    label input,
    label textarea {
      width: 400px;
    }
    label select {
      width: 198px;
    }
    label textarea {
      height: 200px;
      border-color: lightgray;
      margin-top: 6px;
    }
    .preview {
      background-color: lightgray;
      padding: 4px;
    }
    .preview img {
      background-color: gray;
      margin: 4px;
      min-height: 50px;
      min-width: 50px;
      vertical-align: top;
    }
    .col2 {
      float: left;
      width: 60%;
    }
    .col1 {
      float: left;
      width: 38%;
      height: 800px;
      overflow-x: scroll;
    }
    #info div label {
      text-align: right;
    }
    #info div label input {
      width: 78%;
      margin-left: 10px;
    }
    section.ope {
      line-height: 32px;
      margin: 4px;
    }
    .table .row {
      border-top: 1px solid #aaa;
    }
    .table .row .cell {
      height: 100%;
      display: table-cell;
      vertical-align: middle;
      padding: 4px;
      border-right: 1px solid #aaa;
    }
    .table .row .icon {
      width: 60px;
      height: 60px;
      text-align: center;
    }
    .table .row .icon img {
      max-width: 58px;
      max-height: 58px;
    }
    .table .row .name {
      width: 200px;
    }
    .table .row .tag {
      width: 60px;
    }
    .table .row .genres,
    .table .row .links {
      width: 300px;
    }
    .table .row .genres div,
    .table .row .links div {
      display: inline-block;
      margin: 2px 4px;
      background-color: #eee;
      padding: 1px 2px;
      font-size: small;
    }
    .table .row .sources {
      width: 100px;
    }
    .table .row .date {
      width: 100px;
    }
    .table .row .url {
      width: 400px;
    }
    .table .row .desc {
      min-width: 300px;
      max-width: 300px;
    }
    .table .row .check {
      width: 40px;
    }
    .sources-table {
      font-size: small;
    }
  </style>
  <script>
    function ajaxPostRequest(url, params, callback) {
      const xhr = new XMLHttpRequest()
      xhr.onreadystatechange = function() {
        if (xhr.readyState == XMLHttpRequest.DONE) {
           if (xhr.status !== 200) console.log(xhr.status)
           callback(xhr.responseText, xhr.status)
        }
      }
      params = Object.keys(params).reduce((a,k)=>{
        a.push(k + '=' + encodeURIComponent(params[k]))
        return a
      }, []).join('&')

      xhr.open("POST", url, true)
      xhr.setRequestHeader("Content-Type", "application/x-www-form-urlencoded")
      xhr.send(params)
    }
  </script>
</head>
<body>
  <%= yield %>
</body>
</html>
